{
  "compilerOptions": {
    "lib": ["es5", "es2015", "dom"], 
    "target": "ES6", 
    "module": "ESNext", 
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "./build/",
    "rootDir": "./src", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"], 
    "exclude": ["node_modules"]
}
